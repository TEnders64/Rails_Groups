	<div id='registration'>
		<h1>Register</h1>
		<form action="/users" method="post">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<label>First Name: 
			<input type="text" name="users[first_name]" />
			</label>
			<label>Last Name: 
			<input type="text" name="users[last_name]" />
			</label>
			<label>Email:
			<input type="text" name="users[email]" />
			</label>
			<label>Password:
			<input type="text" name="users[password]" />
			</label>
			<label>Confirm Password:
			<input type="text" name="users[password_confirm]" />
			</label>
			<input type="submit" value="Submit" />
		</form>
	</div>
	<div id='login'>
		<h1>Login</h1>
		<form action="/users" method="post">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<label>Email:
			<input type="text" name="users[email]" />
			</label>
			<label>Password:
			<input type="text" name="users[password]" />
			</label>
			<input type="submit" value="Submit" />
		</form>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function(){

		//Set listener for form submission

		$('form').submit(function(){
			event.preventDefault()
			console.log('Form Submitted');

			//Identify which form was submitted

			var data = $(this).parent().attr('id')
			var route

			if (data === 'login'){
				console.log('Login form');
				route = '/login'

			} else if (data === 'registration'){
				console.log('Registration form')
				route = '/users/create'
			}

			$.post(route, note, function(data){
				console.log('Data received from Ajax post request',data);
			}, 'json')

		})

	})
</script>